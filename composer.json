{
    "name":        "alexeyshockov/colada",
    "type":        "library",
    "description": "Collections framework for PHP",
    "keywords":    ["collections"],
    "homepage":    "http://github.com/alexeyshockov/colada",
    "license":     "MIT",
    "support":     {
        "issues": "https://github.com/alexeyshockov/colada/issues",
        "wiki":   "https://github.com/alexeyshockov/colada/wiki"
    },

    "authors": [
        {
            "name":     "Alexey Shockov",
            "email":    "alexey@shockov.com",
            "homepage": "http://alexey.shockov.com/"
        }
    ],

    "require": {
        "php": ">=5.3.2"
    },

    "suggest": {
        "react/curry": "Partial functions."
    },

    "require-dev": {
        "phpspec/phpspec": "2.0.*@beta",
        "phpunit/phpunit": "3.7.*"
    },

    "config": {
        "bin-dir": "bin"
    },

    "autoload": {
        "psr-0": {
            "Colada": "src/",
            "JsonSerializable": "src/"
        },
        "files": [
            "src/functions.php"
        ]
    }
}
